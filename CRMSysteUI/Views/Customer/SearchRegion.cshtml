@{
    ViewData["Title"] = "Customer Management";
}
@model List<CustomerDto>
<div class="container mt-4">
    <h2 class="mb-3">Customer Management</h2>
    <div class="d-flex justify-content-end mb-3">
        <form method="post" asp-controller="Login" asp-action="Logout">
            <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">
            <form method="get" asp-action="Search" asp-controller="Customer">
                <input type="text" id="searchInput" class="form-control" placeholder="Search by Customer...">
            </form>
        </div>
        <form method="get" asp-action="SearchRegion" asp-controller="Customer">
            <div class="col-md-4">
                <select id="region" class="form-control" name="region">
                    <option value="">All Regions</option>
                    @foreach (var region in Model.Select(c => c.Region).Distinct())
                    {
                        <option value="@region">@region</option>
                    }
                </select>
            </div>
            <div class="col mb-3">
                <button class="btn btn-primary" type="submit">Filter</button>
            </div>
        </form>

    </div>

    <table id="customerTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Region</th>
                <th>RegistrationDate</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <p>No Customers found</p>
            }
            else
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerID</td>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.Email</td>
                        <td>@customer.Region</td>
                        <td>@customer.RegistrationDate</td>
                        <td><a href="/Customer/DeleteCustomer/@customer.CustomerID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Customer/UpdateCustomer/@customer.CustomerID" class="btn btn-outline-success">Güncelle</a></td>
                    </tr>
                }
        </tbody>
    </table>
    <a href="/CreateCustomer" class="btn btn-outline-primary">Yeni Müşteri Girişi</a>
</div>


